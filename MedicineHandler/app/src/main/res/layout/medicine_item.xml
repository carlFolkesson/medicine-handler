<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="38dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Namn"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_conversion_absoluteWidth="369dp"
                tools:layout_conversion_absoluteX="15dp"
                tools:layout_conversion_absoluteY="0dp" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="0dp"
                android:text="Antal tabletter i lager: 50"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_conversion_absoluteWidth="369dp"
                tools:layout_conversion_absoluteX="15dp"
                tools:layout_conversion_absoluteY="26dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="122dp"
                android:layout_height="31dp"
                android:text="Tagit medicin"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:layout_constraintLeft_toRightOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.393" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>